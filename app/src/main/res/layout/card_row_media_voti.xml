<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="@android:color/transparent">
        <!--            card_view:cardBackgroundColor="@color/colorPrimary">-->


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
            android:id="@+id/materia"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_card_row"
            android:layout_marginLeft="@dimen/margin_card_row"
            android:layout_marginTop="@dimen/margin_card_row"
            android:layout_marginEnd="@dimen/margin_card_row"
            android:layout_marginRight="@dimen/margin_card_row"
            android:layout_marginBottom="@dimen/margin_card_row"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/docete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/materia"
                android:layout_margin="@dimen/margin_card_row"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_media"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:padding="0dp" />
        <TextView
            android:id="@+id/mediavoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
<!--

        <ImageView
            android:id="@+id/click_materia"
            android:src="@android:drawable/ic_menu_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mediavoti"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_card_row"/>-->

    </RelativeLayout>
</android.support.v7.widget.CardView>


</LinearLayout>